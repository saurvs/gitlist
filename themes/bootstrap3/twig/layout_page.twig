{% extends 'layout.twig' %}

{% block body %}

    <div class="container">
        <div class="header row">
            <div class="col-sm-12">
            	<div class="tab-border nav-tabs">

                    {% if branches is defined %}
                        {% include 'branch_menu.twig' %}
                    {% endif %}

                    {% include 'menu.twig' %}

                    <div class="pull-right">
                        <div class="btn-group download-buttons">
                            <a type="button" class="btn btn-default"
                                href="{{ path('archive', {repo: repo, branch: branch, format: 'zip'}) }}"
                                title="Download '{{ branch }}' as a ZIP archive" >Download ZIP</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        {% block content %}{% endblock %}
    </div>
{% endblock %}
